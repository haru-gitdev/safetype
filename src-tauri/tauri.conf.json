{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Compose & Paste",
  "version": "0.1.0",
  "identifier": "com.haruya.compose-paste",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Compose & Paste",
        "width": 500,
        "height": 300,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {}
}
